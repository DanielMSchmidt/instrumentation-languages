<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="irl"
            id="kieker.tools.rl.RecordLang"
            name="Kieker IRL Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="kieker.tools.rl.RecordLang.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="kieker.tools.rl.RecordLang.validate">
         <activeWhen>
            <reference
                    definitionId="kieker.tools.rl.RecordLang.Editor.opened">
            </reference>
         </activeWhen>
      	</handler>
      	<!-- copy qualified name -->
        <handler
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedNameHandler"
            commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName">
            <activeWhen>
				<reference definitionId="kieker.tools.rl.RecordLang.Editor.opened" />
            </activeWhen>
        </handler>
        <handler
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedNameHandler"
            commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName">
            <activeWhen>
            	<and>
            		<reference definitionId="kieker.tools.rl.RecordLang.XtextEditor.opened" />
	                <iterate>
						<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
					</iterate>
				</and>
            </activeWhen>
        </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="kieker.tools.rl.RecordLang.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="kieker.tools.rl.RecordLang" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
        <definition id="kieker.tools.rl.RecordLang.XtextEditor.opened">
            <and>
                <reference definitionId="isXtextEditorActive"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="kieker.tools.rl.RecordLang" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="kieker.tools.rl.RecordLang"
            name="Kieker IRL">
            <keywordReference id="kieker.tools.rl.ui.keyword_RecordLang"/>
        </page>
        <page
            category="kieker.tools.rl.RecordLang"
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="kieker.tools.rl.RecordLang.coloring"
            name="Syntax Coloring">
            <keywordReference id="kieker.tools.rl.ui.keyword_RecordLang"/>
        </page>
        <page
            category="kieker.tools.rl.RecordLang"
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="kieker.tools.rl.RecordLang.templates"
            name="Templates">
            <keywordReference id="kieker.tools.rl.ui.keyword_RecordLang"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="kieker.tools.rl.RecordLang"
            name="Kieker IRL">
            <keywordReference id="kieker.tools.rl.ui.keyword_RecordLang"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="kieker.tools.rl.ui.keyword_RecordLang"
            label="Kieker IRL"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="kieker.tools.rl.RecordLang.validate"
            name="Validate">
      </command>
      <!-- copy qualified name -->
      <command
            id="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
            categoryId="org.eclipse.ui.category.edit"
            description="Copy the qualified name for the selected element"
            name="Copy Qualified Name">
      </command>
      <command
            id="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
            categoryId="org.eclipse.ui.category.edit"
            description="Copy the qualified name for the selected element"
            name="Copy Qualified Name">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="kieker.tools.rl.RecordLang.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="kieker.tools.rl.RecordLang.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
         <!-- copy qualified name -->
         <menuContribution locationURI="popup:#TextEditorContext?after=copy">
         	<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName" 
         		style="push" tooltip="Copy Qualified Name">
            	<visibleWhen checkEnabled="false">
                	<reference definitionId="kieker.tools.rl.RecordLang.Editor.opened" />
            	</visibleWhen>
         	</command>  
         </menuContribution>
         <menuContribution locationURI="menu:edit?after=copy">
         	<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
            	style="push" tooltip="Copy Qualified Name">
            	<visibleWhen checkEnabled="false">
                	<reference definitionId="kieker.tools.rl.RecordLang.Editor.opened" />
            	</visibleWhen>
         	</command>  
         </menuContribution>
         <menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName" 
				style="push" tooltip="Copy Qualified Name">
         		<visibleWhen checkEnabled="false">
	            	<and>
	            		<reference definitionId="kieker.tools.rl.RecordLang.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="kieker.tools.rl.RecordLang.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="kieker.tools.rl.RecordLang.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="irl">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="irl">
        </resourceServiceProvider>
    </extension>


	<!-- marker definitions for kieker.tools.rl.RecordLang -->
	<extension
	        id="recordlang.check.fast"
	        name="Kieker IRL Problem"
	        point="org.eclipse.core.resources.markers">
	    <super type="org.eclipse.xtext.ui.check.fast"/>
	    <persistent value="true"/>
	</extension>
	<extension
	        id="recordlang.check.normal"
	        name="Kieker IRL Problem"
	        point="org.eclipse.core.resources.markers">
	    <super type="org.eclipse.xtext.ui.check.normal"/>
	    <persistent value="true"/>
	</extension>
	<extension
	        id="recordlang.check.expensive"
	        name="Kieker IRL Problem"
	        point="org.eclipse.core.resources.markers">
	    <super type="org.eclipse.xtext.ui.check.expensive"/>
	    <persistent value="true"/>
	</extension>

   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant">
      </participant>
   </extension>
   <extension
            point="org.eclipse.ui.preferencePages">
        <page
            category="kieker.tools.rl.RecordLang"
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="kieker.tools.rl.RecordLang.compiler.preferencePage"
            name="Compiler">
            <keywordReference id="kieker.tools.rl.ui.keyword_RecordLang"/>
        </page>
		<page
            category="kieker.tools.rl.RecordLang"
            class="kieker.tools.rl.ui.preferences.TargetsPreferencePage"
            id="kieker.tools.rl.ui.preferences.TargetsPreferencePage"
            name="Targets">
            <keywordReference id="kieker.tools.rl.ui.keyword_RecordLang"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            category="kieker.tools.rl.RecordLang"
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="kieker.tools.rl.RecordLang.compiler.propertyPage"
            name="Compiler">
            <keywordReference id="kieker.tools.rl.ui.keyword_RecordLang"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>

	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="kieker.tools.rl.RecordLang.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="kieker.tools.rl.RecordLang.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
    <!-- quickfix marker resolution generator for kieker.tools.rl.RecordLang -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="kieker.tools.rl.ui.recordlang.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="kieker.tools.rl.ui.recordlang.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="kieker.tools.rl.ui.recordlang.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
    </extension>
   	<!-- Rename Refactoring -->
	<extension point="org.eclipse.ui.handlers">
		<handler 
			class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.DefaultRenameElementHandler"
			commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
			<activeWhen>
				<reference
					definitionId="kieker.tools.rl.RecordLang.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
    <extension point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
         <command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
               style="push">
            <visibleWhen checkEnabled="false">
               <reference
                     definitionId="kieker.tools.rl.RecordLang.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.preferencePages">
	    <page
	        category="kieker.tools.rl.RecordLang"
	        class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
	        id="kieker.tools.rl.RecordLang.refactoring"
	        name="Refactoring">
	        <keywordReference id="kieker.tools.rl.ui.keyword_RecordLang"/>
	    </page>
	</extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="kieker.tools.rl.RecordLang.compare.contentViewers"
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="irl">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="kieker.tools.rl.RecordLang.compare.contentMergeViewers"
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="irl" label="Kieker IRL Compare">
     </viewer>
  </extension>
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="kieker.tools.rl.RecordLang.editors.documentProviders"
            class="kieker.tools.rl.ui.RecordLangExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="irl">
    </provider>
  </extension>
  <extension
        point="org.eclipse.debug.core.launchConfigurationTypes">
     <launchConfigurationType
           delegate="kieker.tools.rl.ui.launch.EMFLaunchConfigurationDelegate"
           id="kieker.tools.rl.ui.launchConfigurationType"
           modes="run"
           name="Compile EMF"
           public="true">
     </launchConfigurationType>
  </extension>
  <extension
        point="org.eclipse.debug.ui.launchConfigurationTypeImages">
     <launchConfigurationTypeImage
           configTypeID="kieker.tools.rl.ui.launchConfigurationType"
           icon="icons/EcoreModelFile.png"
           id="kieker.tools.rl.ui.launchConfigurationTypeImage">
     </launchConfigurationTypeImage>
  </extension>
  <extension
        point="org.eclipse.debug.ui.launchConfigurationTabGroups">
     <launchConfigurationTabGroup
           class="kieker.tools.rl.ui.launch.EMFLaunchConfigurationTabGroup"
           id="kieker.tools.rl.ui.launchConfigurationTabGroup"
           type="kieker.tools.rl.ui.launchConfigurationType">
        <launchMode
              mode="run">
        </launchMode>
     </launchConfigurationTabGroup>
  </extension>
  <extension
        point="org.eclipse.core.runtime.preferences">
     <initializer
           class="kieker.tools.rl.preferences.TargetsPreferenceInitializer">
     </initializer>
  </extension>
  <extension
        point="org.eclipse.ui.newWizards">
     <category
           id="kieker.tools.rl.ui"
           name="Kieker">
     </category>
     <wizard
           category="kieker.tools.rl.ui"
           class="kieker.tools.rl.ui.wizards.RecordLangNewWizard"
           icon="icons/kieker-irl-wizard.png"
           id="kieker.tools.rl.ui.wizards.RecordLangNewWizard"
           name="IRL File">
     </wizard>
  </extension>
  <extension
        point="org.eclipse.ui.propertyPages">
     <page
           category="kieker.tools.rl.RecordLang"
           class="kieker.tools.rl.ui.preferences.TargetsPreferencePage"
           id="kieker.tools.rl.ui.preferences.TargetsPropertyPage"
           name="Targets">
        <keywordReference
              id="kieker.tools.rl.ui.keyword_RecordLang">
        </keywordReference>
        <enabledWhen>
           <adapt
                 type="org.eclipse.core.resources.IProject">
           </adapt>
        </enabledWhen>
        <filter
              name="projectNature"
              value="org.eclipse.xtext.ui.shared.xtextNature">
        </filter>
     </page>
  </extension>

</plugin>
