<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.cau.cs.se.instrumentation</groupId>
	<artifactId>parent</artifactId>
	<version>1.0.0</version>
	<name>Instrumentation Languages Release Engineering</name>

	<packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<checkstyle.config.location>cs-conf.xml</checkstyle.config.location>
		<tycho-version>0.18.1</tycho-version>
		<kepler-repo.url>http://download.eclipse.org/releases/kepler</kepler-repo.url>
		<kieler-repo.url>http://rtsys.informatik.uni-kiel.de/~kieler/updatesite/nightly</kieler-repo.url>
		<palladio-repo.url>http://sdqweb.ipd.kit.edu/eclipse/palladio/releases/3.4.1</palladio-repo.url>
		<probespec-repo.url>http://sdqweb.ipd.kit.edu/eclipse/probespec/releases/1.2</probespec-repo.url>
		<palladio-fm-repo.url>http://sdqweb.ipd.kit.edu/eclipse/featuremodel/releases/1.3</palladio-fm-repo.url>
		<palladio-sf-repo.url>http://sdqweb.ipd.kit.edu/eclipse/sensorframework/releases/1.3</palladio-sf-repo.url>
		<palladio-wfe-repo.url>http://sdqweb.ipd.kit.edu/eclipse/workflowengine/releases/2.0.2</palladio-wfe-repo.url>
		<kit-common-repo.url>http://sdqweb.ipd.kit.edu/eclipse/commons/releases/1.3</kit-common-repo.url>
		<tycho-repo.url>https://oss.sonatype.org/content/groups/public/</tycho-repo.url>
		<xtext-repo.url>http://download.itemis.de/updates</xtext-repo.url>
		<!-- this is only required if you use the eclipselabs unittesting plugin; 
			remove otherwise -->
		<eclipselabs-site>http://xtext-utils.eclipselabs.org.codespot.com/git.distribution/releases/unittesting-0.9.x</eclipselabs-site>
	</properties>

	<modules>
		<module>../de.cau.cs.se.instrumentation.al</module>
		<module>../de.cau.cs.se.instrumentation.al.ui</module>
		<module>../de.cau.cs.se.instrumentation.al.tests</module>
		<module>../de.cau.cs.se.instrumentation.al.sdk</module>
		<module>../de.cau.cs.se.instrumentation.rl</module>
		<module>../de.cau.cs.se.instrumentation.rl.ui</module>
		<module>../de.cau.cs.se.instrumentation.rl.tests</module>
		<module>../de.cau.cs.se.instrumentation.rl.sdk</module>
		<module>../de.cau.cs.se.instrumentation.updatesite</module>
		<module>../de.cau.cs.se.instrumentation.rl.cli</module>
	</modules>

	<repositories>
		<repository>
			<id>central</id>
			<name>Maven Central</name>
			<url>http://repo1.maven.org/maven2</url>
		</repository>

		<repository>
			<id>kepler</id>
			<layout>p2</layout>
			<url>${kepler-repo.url}</url>
		</repository>

		<repository>
			<id>kieler</id>
			<layout>p2</layout>
			<url>${kieler-repo.url}</url>
		</repository>

		<repository>
			<id>xtext</id>
			<layout>p2</layout>
			<url>${xtext-repo.url}</url>
		</repository>

		<repository>
			<id>probespec</id>
			<layout>p2</layout>
			<url>${probespec-repo.url}</url>
		</repository>
		<repository>
			<id>palladio</id>
			<layout>p2</layout>
			<url>${palladio-repo.url}</url>
		</repository>
		<repository>
			<id>palladioFeatureModel</id>
			<layout>p2</layout>
			<url>${palladio-fm-repo.url}</url>
		</repository>
		<repository>
			<id>palladioSensorFramework</id>
			<layout>p2</layout>
			<url>${palladio-sf-repo.url}</url>
		</repository>
		<repository>
			<id>palladioWorkflowEngine</id>
			<layout>p2</layout>
			<url>${palladio-wfe-repo.url}</url>
		</repository>
		<repository>
			<id>kitCommons</id>
			<layout>p2</layout>
			<url>${kit-common-repo.url}</url>
		</repository>

		<!-- this is only required if you use the eclipselabs unittesting plugin; 
			remove otherwise -->
		<repository>
			<id>eclipselabs</id>
			<layout>p2</layout>
			<url>${eclipselabs-site}</url>
		</repository>

	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
			<!-- ceckstyle plugin -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.9.1</version>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>